<Window x:Class="_200507_Ecommerce.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_200507_Ecommerce"
        xmlns:ui="clr-namespace:_200507_Exo07_Ecommerce.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
      <TabControl>
         <TabItem Header="eShop">
            <Frame Source="UI/eShopPage.xaml" NavigationUIVisibility="Hidden"></Frame>
         </TabItem>
         <TabItem Header="MyAccount">
            <Frame Source="UI/AccountPage.xaml" NavigationUIVisibility="Hidden"></Frame>
         </TabItem>
         <TabItem Header="Admin" Visibility="Collapsed">
            <Frame Source="UI/AdminPage.xaml" NavigationUIVisibility="Hidden"></Frame>
         </TabItem>
      </TabControl>
    </Grid>
</Window>
